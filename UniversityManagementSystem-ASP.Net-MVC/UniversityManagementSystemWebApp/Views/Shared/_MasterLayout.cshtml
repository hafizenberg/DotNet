            <span class="logo-lg"><b>U</b>MS</span>
        </a>
        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>

            <div>
                @Html.ActionLink("University Management System", "Index", "index",null,new{@class = "navbar-brand"})
            </div>
           
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    <!-- Tasks Menu -->

                    <!-- User Account Menu -->
                    <!-- Control Sidebar Toggle Button -->

                    <li class="dropdown ">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-users fa"></i> <span> Student</span> <span class="caret"></span></a>
                        <ul class="dropdown-menu bg-green-gradient" role="menu">
                            <li> @Html.ActionLink("Regster New Student", "Register", "Student")</li>
                            <li> @Html.ActionLink("Enroll A Student", "Enroll", "EnrollCourse")</li>
                        </ul>
                    </li>
